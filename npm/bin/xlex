#!/usr/bin/env node
/**
 * XLEX CLI wrapper for npm/npx
 * This script forwards all arguments to the actual xlex binary
 */

const { spawn } = require('child_process');
const path = require('path');
const os = require('os');

const platform = os.platform();
const binaryName = platform === 'win32' ? 'xlex.exe' : 'xlex';
const binaryPath = path.join(__dirname, binaryName);

const child = spawn(binaryPath, process.argv.slice(2), {
  stdio: 'inherit',
});

child.on('close', (code) => {
  process.exit(code);
});
